<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.mac.myapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name=".ui.activity.LogoActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MainActivity"
            android:label="main"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".ui.activity.WithdrawActivity"
            android:label="withdraw">
        </activity>
        <activity
            android:name=".ui.activity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.MenuActivity"
            android:label="@string/title_activity_menu">
        </activity>
        <activity
            android:name=".ui.activity.UserEditActivity"
            android:label="@string/title_activity_user_edit">
        </activity>
        <activity
            android:name=".Testctivity"
            android:label="@string/title_activity_testctivity"
            android:theme="@style/Theme.PageIndicatorDefaults">
        </activity>
        <activity
            android:name=".ui.activity.ChatActivity"
            android:label="@string/title_activity_chat"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
