<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.myapplication.ui.LikeActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <ImageView
            android:id="@+id/user_photo"
            android:src="@drawable/img_1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:background="#80FFFFFF"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <LinearLayout
                android:id="@+id/like_it"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/photo_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/user_like_it"
                    android:layout_marginRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="28"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/photo_num"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/user_photo_num"
                    android:layout_marginRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="13"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
<ImageButton
    android:background="@drawable/round_icon"
    android:layout_gravity="center"
    android:layout_width="60dp"
    android:layout_height="60dp"/>
</LinearLayout>