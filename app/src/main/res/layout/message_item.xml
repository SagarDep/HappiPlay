<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/message_item"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="center_vertical"
                android:background="@drawable/btn_normal_selector"
                 >

    <ImageView
        android:id="@+id/message_user_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="6dp"
        android:src="@drawable/game_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/message_user_head"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="客服MM"
            android:textSize="16sp"
            android:textColor="@color/dark_text"/>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="歡迎來到開心玩成人社區"
            android:textColor="@color/material_deep_teal_500"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="下午12:43"
            android:textColor="@color/darker_gray"/>

        <TextView
            android:id="@+id/message_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:layout_margin="8dp"
            android:text="0"
            android:background="@drawable/round_shape"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
</RelativeLayout>
