<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/menu_color"
            android:orientation="vertical"
            android:scrollbars="none"
            tools:context="com.example.mac.myapplication.ui.DrawerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_user"
            style="@style/MenuItemStyle"
            android:src="@android:drawable/sym_def_app_icon"/>

        <ImageView
            android:id="@+id/menu_album"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_album"/>

        <ImageView
            android:id="@+id/menu_like"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_like"/>

        <ImageView
            android:id="@+id/menu_nearby"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_nearby"/>

        <ImageView
            android:id="@+id/menu_msg"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_msg"/>

        <ImageView
            android:id="@+id/menu_setting"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_setting"/>
    </LinearLayout>


</ScrollView>
