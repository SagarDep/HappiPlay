<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/menu_color"
              tools:context="com.example.mac.myapplication.ui.DrawerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/menu_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_user"
            style="@style/MenuItemStyle"
            android:src="@android:drawable/sym_def_app_icon"/>
        <ImageView
            android:id="@+id/menu_album"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_album_selector"/>
        <ImageView
            android:id="@+id/menu_like"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_like_selector"/>
        <ImageView
            android:id="@+id/menu_nearby"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_nearby_selector"/>

        <ImageView
            android:id="@+id/menu_msg"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_msg_selector"/>

        <ImageView
            android:id="@+id/menu_setting"
            style="@style/MenuItemStyle"
            android:src="@drawable/menu_setting_selector"/>
    </LinearLayout>


</LinearLayout>
